<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="600.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.simplecalculator.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <TextField fx:id="inputText" alignment="CENTER_RIGHT" editable="false" maxWidth="-Infinity" prefHeight="50.0" prefWidth="330.0" text="Label" VBox.vgrow="ALWAYS">
      <font>
         <Font name="Calibri Bold" size="20.0" />
      </font>
   </TextField>
   <HBox alignment="CENTER" prefHeight="350.0" prefWidth="400.0">
      <children>
         <GridPane alignment="CENTER" hgap="5" prefHeight="350.0" prefWidth="350.0" style="-fx-font-family:'Calibri'; -fx-font-size:20px; -fx-font-weight:bold;" vgap="5">
             <padding>
                 <Insets bottom="10" left="10" right="10" top="10" />
             </padding>
               <columnConstraints>
                 <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" percentWidth="25" />
                 <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" percentWidth="25" />
                 <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" percentWidth="25" />
                 <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" percentWidth="25" />
               </columnConstraints>
               <rowConstraints>
                 <RowConstraints maxHeight="73.0" minHeight="10.0" percentHeight="25.0" prefHeight="70.0" vgrow="SOMETIMES" />
                 <RowConstraints maxHeight="85.0" minHeight="10.0" percentHeight="25.0" prefHeight="85.0" vgrow="SOMETIMES" />
                 <RowConstraints minHeight="10.0" percentHeight="25.0" vgrow="SOMETIMES" />
                 <RowConstraints minHeight="10.0" percentHeight="25.0" vgrow="SOMETIMES" />
               <RowConstraints />
               </rowConstraints>
             <Button maxHeight="Infinity" maxWidth="Infinity" onAction="#calculatorButtonClick" text="7" GridPane.columnIndex="0" GridPane.rowIndex="0" />
             <Button maxHeight="Infinity" maxWidth="Infinity" onAction="#calculatorButtonClick" text="8" GridPane.columnIndex="1" GridPane.rowIndex="0" />
             <Button maxHeight="Infinity" maxWidth="Infinity" onAction="#calculatorButtonClick" text="9" GridPane.columnIndex="2" GridPane.rowIndex="0" />
             <Button maxHeight="Infinity" maxWidth="Infinity" onAction="#calculatorButtonClick" text="Del" GridPane.columnIndex="3" GridPane.rowIndex="0" />
      
             <Button maxHeight="Infinity" maxWidth="Infinity" onAction="#calculatorButtonClick" text="4" GridPane.columnIndex="0" GridPane.rowIndex="1" />
             <Button maxHeight="Infinity" maxWidth="Infinity" onAction="#calculatorButtonClick" text="5" GridPane.columnIndex="1" GridPane.rowIndex="1" />
             <Button maxHeight="Infinity" maxWidth="Infinity" onAction="#calculatorButtonClick" text="6" GridPane.columnIndex="2" GridPane.rowIndex="1" />
             <Button maxHeight="Infinity" maxWidth="Infinity" onAction="#calculatorButtonClick" text="+" GridPane.columnIndex="3" GridPane.rowIndex="1" />
      
             <Button maxHeight="Infinity" maxWidth="Infinity" onAction="#calculatorButtonClick" text="1" GridPane.columnIndex="0" GridPane.rowIndex="2" />
             <Button maxHeight="Infinity" maxWidth="Infinity" onAction="#calculatorButtonClick" text="2" GridPane.columnIndex="1" GridPane.rowIndex="2" />
             <Button maxHeight="Infinity" maxWidth="Infinity" onAction="#calculatorButtonClick" text="3" GridPane.columnIndex="2" GridPane.rowIndex="2" />
             <Button maxHeight="Infinity" maxWidth="Infinity" onAction="#calculatorButtonClick" text="-" GridPane.columnIndex="3" GridPane.rowIndex="2" />
      
             <Button maxHeight="Infinity" maxWidth="Infinity" onAction="#calculatorButtonClick" text="=" GridPane.columnIndex="0" GridPane.rowIndex="3" />
             <Button maxHeight="Infinity" maxWidth="Infinity" onAction="#calculatorButtonClick" text="0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
             <Button maxHeight="Infinity" maxWidth="Infinity" onAction="#calculatorButtonClick" text="x" GridPane.columnIndex="2" GridPane.rowIndex="3" />
             <Button maxHeight="Infinity" maxWidth="Infinity" onAction="#calculatorButtonClick" text="/" GridPane.columnIndex="3" GridPane.rowIndex="3" />
         </GridPane>
      </children>
   </HBox>
</VBox>
